<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#1A1A1A">

    <soup.neumorphism.NeumorphButton
        android:id="@+id/btn_message"
        android:padding="26dp"
        android:textColor="@color/text_white"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background_first"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:neumorph_backgroundColor="#1A1A1A"
        app:neumorph_shadowColorDark="#B3000000"
        app:neumorph_shadowColorLight="#B33A3A3A"
        android:text="this is my first neu button"
        app:neumorph_shadowElevation="3dp"
        app:neumorph_shapeType="flat"
        app:neumorph_shapeAppearance="@style/neuButton"
        app:neumorph_lightSource="leftTop"/>

</androidx.constraintlayout.widget.ConstraintLayout>
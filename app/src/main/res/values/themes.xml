<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Neumorphism" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/new_background</item>
        <item name="colorOnPrimary">@color/new_background</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_light</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/text_gray</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

    </style>

    <!--  NeuButton style  -->
    <style name="neuButton">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">8dp</item>
    </style>

</resources>